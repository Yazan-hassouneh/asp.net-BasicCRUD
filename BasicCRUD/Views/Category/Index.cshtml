@model IEnumerable<Category>
@{
    ViewData["Title"] = "Category List";
}

<div class="pt-3 pb-3 mt-4 d-flex justify-content-between align-items-center">
    <h1 class="text-primary "><strong>Categories List</strong></h1>
    <a class="btn btn-primary" asp-controller="Category" asp-action="Create"><i class="bi bi-plus-circle"></i> Category</a>
</div>
<hr />

<table class="table-bordered table-striped table">
    <thead>
        <tr>
            <th>id</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(Category category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td><a asp-controller="Category" asp-action="Details" asp-route-id="@category.Id" class="text-decoration-none text-white">@category.Name <i class="bi bi-three-dots-vertical text-primary"></i></a></td>
                <td class="d-flex justify-content-around align-items-center">
                    <a asp-controller="Category" asp-action="Update" asp-route-id="@category.Id" class="text-primary"><i class="bi bi-pencil-square"></i></a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="text-primary"><i class="bi bi-trash3"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>